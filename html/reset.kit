    <section class="login">
        <div class="wrapper">
            <h1 class="login__title">Ravish.pl | Resetowanie hasła</h1>
            <div class="login-box">
                <div class="login-left login-item">
                    <h2 class="login__titles">Resetowanie hasła</h2>
                    <div class="login__line"></div>
                    <p class="login__text">Proszę podać adres email użyty przy rejestracji konta.</p>
